{
    "frontend": {"requestFileName": "<% moduleName %>"},
    "both": {
        "session": {
            "dataDescriptionPrefix": "application",
            "expirationTimeInMinutes": 1440,
            "key": {
                "token": "<% session['dataDescriptionPrefix'] %>SessionToken",
                "userID": "<% session['dataDescriptionPrefix'] %>UserID",
                "expirationDateTime": "<% session['dataDescriptionPrefix'] %>SessionExpirationDateTime"
            }
        },

        "location": {
            "webAsset": "/webAsset/",
            "template": "<% location['webAsset'] %>template/"
        },

        "encoding": "utf_8",

        "defaultLanguage": "enUS",
        "model": {
            "authentication": {
                "password": {
                    "minimumLength": 4,
                    "maximumLength": 100,
                    "pattern": ".{4}"
                }
            }
        }
    },
    "backend": {
        "secretDjangoKey": "",
        "templateEngine": "internal",
        "abbreviations": ["id", "url"],
        "databaseEnginePrefix": "sqlite:///",
        "maximumCookieAgeInSeconds": 31536000,
        "model": {
            "generic": {
                "text": {"pattern": ".*$"},
                "eMailAddress": {
                    "minimumLength": 5,
                    "maximumLength": 100,
                    "pattern": "[_A-Za-z0-9\\-+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$"
                },
                "phoneNumber": {
                    "minimumLength": 1,
                    "maximumLength": 50,
                    "minimum": 0,
                    "maximum": 9999999999999999999999999999999999999999999999,
                    "pattern": "([0-9-+()]+(/|-)?[0-9-+]+)?$"
                },
                "languageSpecific": {"default": {}}
            },
            "authentication": {
                "sessionToken": {"length": 32},
                "password": {
                    "salt": {"length": 32}, "pepper": "pepperExample"
                }
            }
        },
        "defaultIndentLevel": 4,
        "authenticationMethod": "header",

        "delimiterPattern": "(!|\\?)",
        "webServer": {
            "root": "/", "default": "<% location['indexHTMLFile'] %>",
            "requestWhitelist": [
                "GET|POST|DELETE|PUT|PATCH:/<% moduleName %><% delimiterPattern %>.+$",
                "GET:(/|<% location['webAsset'] %>.+)$"
            ],
            "sameThreadRequestWhitelist": ["GET /<% moduleName %><% delimiterPattern %>.+ .+$"],
            "publicKeyFilePath": "",
            "requestParameterDelimiter": "<% delimiterPattern %>",
            "authentication": false, "moduleLoading": "<% moduleName %>",
            "authenticationFileName": "", "stopOrder": "",
            "directoryListing": false, "maximumNumberOfProcesses": 4
        },
        "location": {
            "indexHTMLFile": "/index.html",
            "offlineManifestTemplateFile": "<% location['template'] %>offlineManifest.tpl",
            "templateIndexFile": "<% location['template'] %>index.html.tpl",
            "webCache": "/cache/",
            "certificateFile": "/certificate/example.pem",
            "databaseFolder": "/database/",
            "databaseURL": "<% location['databaseFolder'] %>data",
            "databaseSchemaFile": "<% location['databaseFolder'] %>schema.json"
        },

        "ignoreWebAssetPattern": [".*\\.swp$", "\\..*$"],

        "commandLineArguments": [{
            "arguments": ["-w", "--web-cache"],
            "keywords": {
                "action": "store_true",
                "default": {"execute": "False"},
                "help": "Activates the static file full web cache.",
                "dest": "web_cache"
            }
        }, {
            "arguments": ["-p", "--port"],
            "keywords": {
                "action": "store",
                "default": 8080,
                "type": {"execute": "int"},
                "choices": {"execute": "range(2 ** 16)"},
                "required": {"execute": "__initializer_default_value__ is None"},
                "help": "Defines the port number to access the web server. If zero given a free port will be determined.",
                "dest": "port",
                "metavar": "NUMBER"
            }
        }, {
            "arguments": ["-r", "--render-template"],
            "keywords": {
                "action": "store_true",
                "default": {"execute": "False"},
                "help": "Indicates if the application should simply render the main html entry file and terminate.",
                "dest": "render_template"
            }
        }]
    }
}
